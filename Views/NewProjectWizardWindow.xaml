<Window x:Class="Schedule1ModdingTool.Views.NewProjectWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Mod Project Wizard" Height="600" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource DarkBackgroundBrush}"
        Foreground="{StaticResource LightTextBrush}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.ClearTypeHint="Enabled"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">
	<Border Margin="20"
	        Background="{StaticResource DarkPanelBrush}"
	        BorderBrush="{StaticResource DarkBorderBrush}"
	        BorderThickness="1"
	        CornerRadius="6"
	        Padding="20">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0" Text="Create New Mod Project" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" />

			<StackPanel Grid.Row="1" Orientation="Vertical">
				<GroupBox Header="Mod Information" Margin="0,0,0,15">
					<StackPanel Margin="10">
						<Grid Margin="0,0,0,10">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Text="Mod Name:" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="120" />
							<TextBox Grid.Column="1" Text="{Binding ModName, UpdateSourceTrigger=PropertyChanged}" />
						</Grid>
						<Grid Margin="0,0,0,10">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Text="Mod Author:" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="120" />
							<TextBox Grid.Column="1" Text="{Binding ModAuthor, UpdateSourceTrigger=PropertyChanged}" />
						</Grid>
						<Grid Margin="0,0,0,10">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Text="Mod Version:" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="120" />
							<TextBox Grid.Column="1" Text="{Binding ModVersion, UpdateSourceTrigger=PropertyChanged}" />
						</Grid>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Text="Namespace:" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="120" />
							<TextBox Grid.Column="1" Text="{Binding ModNamespace, UpdateSourceTrigger=PropertyChanged}" />
						</Grid>
					</StackPanel>
				</GroupBox>

				<GroupBox Header="Project Location">
					<StackPanel Margin="10">
						<Grid Margin="0,0,0,10">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Text="Workspace Path:" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="120" />
							<TextBox Grid.Column="1" Text="{Binding ProjectPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0" />
							<Button Grid.Column="2" Content="Browse..." Command="{Binding BrowsePathCommand}" Padding="10,0" />
						</Grid>
						<TextBlock Text="{Binding FullProjectPath, StringFormat='Project will be created at: {0}'}"
						           Foreground="{StaticResource DimTextBrush}"
						           Margin="0,10,0,0"
						           TextWrapping="Wrap"
						           Visibility="{Binding FullProjectPath, Converter={StaticResource StringToVisibilityConverter}}" />
					</StackPanel>
				</GroupBox>
			</StackPanel>

			<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
				<Button Content="Create Project" Command="{Binding CreateCommand}" Padding="20,5" Margin="0,0,10,0" MinWidth="100"
				        IsDefault="True" />
				<Button Content="Cancel" Command="{Binding CancelCommand}" Padding="20,5" MinWidth="100" IsCancel="True" />
			</StackPanel>
		</Grid>
	</Border>
</Window>