<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Color Palette - Base Colors -->
    <Color x:Key="DarkBackgroundColor">#1E1E1E</Color>
    <Color x:Key="DarkPanelColor">#2D2D30</Color>
    <Color x:Key="DarkBorderColor">#3F3F46</Color>
    <Color x:Key="DarkSelectedColor">#007ACC</Color>
    
    <!-- Layered Color Shades - Background (Darker = Deeper) -->
    <Color x:Key="DarkBackgroundDeeper">#151515</Color>  <!-- Darkest - for deepest elements -->
    <Color x:Key="DarkBackgroundBase">#1E1E1E</Color>     <!-- Base background -->
    <Color x:Key="DarkBackgroundElevated">#252525</Color> <!-- Slightly lighter -->
    
    <!-- Layered Color Shades - Panel (Lighter = More Elevated) -->
    <Color x:Key="DarkPanelBase">#2D2D30</Color>         <!-- Base panel -->
    <Color x:Key="DarkPanelElevated">#353538</Color>     <!-- Elevated panel (+0.1 lightness) -->
    <Color x:Key="DarkPanelMoreElevated">#3D3D40</Color>  <!-- More elevated (+0.2 lightness) -->
    <Color x:Key="DarkPanelHighest">#454548</Color>      <!-- Highest elevation (+0.3 lightness) -->
    
    <!-- Layered Color Shades - Border -->
    <Color x:Key="DarkBorderSubtle">#2F2F32</Color>      <!-- Subtle border -->
    <Color x:Key="DarkBorderBase">#3F3F46</Color>        <!-- Base border -->
    <Color x:Key="DarkBorderAccent">#4F4F56</Color>       <!-- Accent border (lighter) -->
    
    <!-- Hover and Interactive States -->
    <Color x:Key="DarkHoverColor">#3E3E42</Color>
    <Color x:Key="DarkHoverElevated">#48484C</Color>     <!-- Elevated hover -->
    
    <!-- Text Colors -->
    <Color x:Key="LightTextColor">#FFFFFF</Color>
    <Color x:Key="MediumTextColor">#CCCCCC</Color>
    <Color x:Key="DimTextColor">#808080</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="AccentOrangeColor">#FF6B35</Color>
    <Color x:Key="AccentOrangeHoverColor">#FF8C5A</Color>
    <Color x:Key="AccentOrangeSelectedColor">#E55A2B</Color>
    <Color x:Key="AccentOrangeLight">#FF9D7A</Color>      <!-- Lighter accent for elevated elements -->
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    
    <!-- Shadow Colors -->
    <Color x:Key="ShadowColorDark">#000000</Color>
    <Color x:Key="ShadowColorLight">#FFFFFF</Color>
    
    <!-- SolidColorBrush Resources - Base -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkPanelBrush" Color="{StaticResource DarkPanelColor}"/>
    <SolidColorBrush x:Key="DarkBorderBrush" Color="{StaticResource DarkBorderColor}"/>
    <SolidColorBrush x:Key="DarkHoverBrush" Color="{StaticResource DarkHoverColor}"/>
    <SolidColorBrush x:Key="DarkSelectedBrush" Color="{StaticResource DarkSelectedColor}"/>
    
    <!-- Layered Background Brushes -->
    <SolidColorBrush x:Key="DarkBackgroundDeeperBrush" Color="{StaticResource DarkBackgroundDeeper}"/>
    <SolidColorBrush x:Key="DarkBackgroundBaseBrush" Color="{StaticResource DarkBackgroundBase}"/>
    <SolidColorBrush x:Key="DarkBackgroundElevatedBrush" Color="{StaticResource DarkBackgroundElevated}"/>
    
    <!-- Layered Panel Brushes -->
    <SolidColorBrush x:Key="DarkPanelBaseBrush" Color="{StaticResource DarkPanelBase}"/>
    <SolidColorBrush x:Key="DarkPanelElevatedBrush" Color="{StaticResource DarkPanelElevated}"/>
    <SolidColorBrush x:Key="DarkPanelMoreElevatedBrush" Color="{StaticResource DarkPanelMoreElevated}"/>
    <SolidColorBrush x:Key="DarkPanelHighestBrush" Color="{StaticResource DarkPanelHighest}"/>
    
    <!-- Layered Border Brushes -->
    <SolidColorBrush x:Key="DarkBorderSubtleBrush" Color="{StaticResource DarkBorderSubtle}"/>
    <SolidColorBrush x:Key="DarkBorderBaseBrush" Color="{StaticResource DarkBorderBase}"/>
    <SolidColorBrush x:Key="DarkBorderAccentBrush" Color="{StaticResource DarkBorderAccent}"/>
    
    <!-- Hover Brushes -->
    <SolidColorBrush x:Key="DarkHoverElevatedBrush" Color="{StaticResource DarkHoverElevated}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="LightTextBrush" Color="{StaticResource LightTextColor}"/>
    <SolidColorBrush x:Key="MediumTextBrush" Color="{StaticResource MediumTextColor}"/>
    <SolidColorBrush x:Key="DimTextBrush" Color="{StaticResource DimTextColor}"/>
    
    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrangeColor}"/>
    <SolidColorBrush x:Key="AccentOrangeHoverBrush" Color="{StaticResource AccentOrangeHoverColor}"/>
    <SolidColorBrush x:Key="AccentOrangeSelectedBrush" Color="{StaticResource AccentOrangeSelectedColor}"/>
    <SolidColorBrush x:Key="AccentOrangeLightBrush" Color="{StaticResource AccentOrangeLight}"/>
    
    <!-- Status Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    
    <!-- Shadow Brushes -->
    <SolidColorBrush x:Key="ShadowDarkBrush" Color="{StaticResource ShadowColorDark}" Opacity="0.3"/>
    <SolidColorBrush x:Key="ShadowLightBrush" Color="{StaticResource ShadowColorLight}" Opacity="0.1"/>

</ResourceDictionary>

