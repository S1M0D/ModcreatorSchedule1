<UserControl x:Class="Schedule1ModdingTool.Views.BuildingSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Schedule1ModdingTool.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="300">
    <ComboBox x:Name="BuildingComboBox"
              SelectedValuePath="TypeName"
              FontSize="10"
              IsEditable="True"
              Style="{StaticResource ComboBoxStyle}">
        <ComboBox.ItemTemplate>
            <DataTemplate DataType="{x:Type viewModels:BuildingInfo}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" Margin="0,0,8,0" />
                    <TextBlock Text="(" Foreground="{StaticResource MediumTextBrush}" />
                    <TextBlock Text="{Binding TypeName}" Foreground="{StaticResource MediumTextBrush}" FontFamily="Consolas" />
                    <TextBlock Text=")" Foreground="{StaticResource MediumTextBrush}" />
                </StackPanel>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>

