<UserControl x:Class="Schedule1ModdingTool.Views.WorkspaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Workspace Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Drop zone for quest blueprints" 
                       FontStyle="Italic" 
                       Foreground="Gray" 
                       VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Quest List -->
        <ListBox Grid.Row="1"
                 x:Name="QuestListBox"
                 ItemsSource="{Binding CurrentProject.Quests}"
                 SelectedItem="{Binding SelectedQuest}"
                 ItemContainerStyle="{StaticResource QuestItemStyle}"
                 AllowDrop="True"
                 Drop="QuestListBox_Drop"
                 DragOver="QuestListBox_DragOver">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Summary}" FontSize="10" Foreground="Gray"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding BlueprintType}" 
                                   FontSize="10" 
                                   Foreground="DarkBlue" 
                                   VerticalAlignment="Top"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit Quest" Command="{Binding EditQuestCommand}">
                        <MenuItem.Icon>
                            <TextBlock Text="âœï¸" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Remove Quest" Command="{Binding RemoveQuestCommand}">
                        <MenuItem.Icon>
                            <TextBlock Text="âž–" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        
        <!-- Empty State -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Visibility="{Binding CurrentProject.Quests.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <TextBlock Text="ðŸŽ¤" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
            <TextBlock Text="No quests in your project" 
                       HorizontalAlignment="Center" 
                       FontStyle="Italic" 
                       Foreground="Gray"/>
            <TextBlock Text="Drag blueprints here to get started" 
                       HorizontalAlignment="Center" 
                       FontSize="10" 
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</UserControl>