<UserControl x:Class="Schedule1ModdingTool.Views.ResourcesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Schedule1ModdingTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Resources Header -->
        <views:WorkspaceHeader Grid.Row="0" DataContext="{Binding WorkspaceViewModel}"/>
        
        <!-- Resources Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Background="{StaticResource DarkBackgroundBrush}">
            <StackPanel Margin="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“" 
                           FontSize="64" 
                           HorizontalAlignment="Center" 
                           Opacity="0.3"
                           Margin="0,0,0,16"/>
                <TextBlock Text="Resources Management" 
                           HorizontalAlignment="Center" 
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource LightTextBrush}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Upload and manage custom icons, images, and other resources" 
                           HorizontalAlignment="Center" 
                           FontSize="12" 
                           Foreground="{StaticResource DimTextBrush}"
                           TextWrapping="Wrap"
                           MaxWidth="400"/>
                <Button Content="Upload Resource" 
                        Margin="0,24,0,0"
                        Padding="16,8"
                        Style="{StaticResource IconButtonStyle}"
                        Background="{StaticResource AccentOrangeBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <!-- TODO: Implement upload -->
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

