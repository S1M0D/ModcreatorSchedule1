<UserControl x:Class="Schedule1ModdingTool.Views.WorkspaceHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:Schedule1ModdingTool.Utils"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    
    <Border Background="{StaticResource DarkPanelBrush}" 
            BorderBrush="{StaticResource DarkBorderBrush}" 
            BorderThickness="0,0,0,1"
            Padding="16,12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Title -->
            <TextBlock Grid.Column="0" 
                       Text="{Binding WorkspaceTitle}" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="{StaticResource LightTextBrush}"
                       VerticalAlignment="Center"
                       Margin="0,0,16,0"/>
            
            <!-- Search and Controls -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <!-- Search Bar -->
                <Border Background="{StaticResource DarkBackgroundBrush}"
                        BorderBrush="{StaticResource DarkBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,4"
                        Margin="0,0,8,0"
                        MinWidth="200">
                    <Grid>
                        <materialDesign:PackIcon Kind="{StaticResource SearchIcon}"
                              Foreground="{StaticResource DimTextBrush}"
                              Width="16" Height="16"
                              VerticalAlignment="Center"
                              Margin="4,0,0,0"
                              HorizontalAlignment="Left"/>
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{StaticResource LightTextBrush}"
                                 Padding="24,0,0,0"
                                 VerticalContentAlignment="Center"
                                 FontSize="12"/>
                    </Grid>
                </Border>
                
                <!-- Filter Button -->
                <Button Command="{Binding FilterCommand}"
                        Style="{StaticResource IconButtonStyle}"
                        Padding="8,4"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="{StaticResource FilterIcon}"
                              Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                              Width="16" Height="16"
                              Margin="0,0,4,0"/>
                        <TextBlock Text="Filter"/>
                    </StackPanel>
                </Button>
                
                <!-- Sort Button -->
                <Button Command="{Binding SortCommand}"
                        Style="{StaticResource IconButtonStyle}"
                        Padding="8,4"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="{StaticResource SortIcon}"
                              Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                              Width="16" Height="16"
                              Margin="0,0,4,0"/>
                        <TextBlock Text="Sort"/>
                    </StackPanel>
                </Button>
                
                <!-- Display Type Toggle -->
                <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                    <TextBlock Text="Display type: "
                               Foreground="{StaticResource MediumTextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBlock Text="Tiles"
                               Foreground="{StaticResource AccentOrangeBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Project Info -->
            <TextBlock Grid.Column="2"
                       Text="{Binding ProjectInfo}"
                       Foreground="{StaticResource MediumTextBrush}"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"
                       FontSize="12"/>
        </Grid>
    </Border>
</UserControl>

