<UserControl x:Class="Schedule1ModdingTool.Views.PropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8">
        <StackPanel>
            <!-- Quest Details Section -->
            <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <TextBlock Text="Quest Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <Label Content="Class Name:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SelectedQuest.ClassName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource TextBoxStyle}"/>
                    
                    <Label Content="Quest ID:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SelectedQuest.QuestId, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource TextBoxStyle}"/>
                    
                    <Label Content="Quest Title:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SelectedQuest.QuestTitle, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource TextBoxStyle}"/>
                    
                    <Label Content="Quest Description:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SelectedQuest.QuestDescription, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource TextBoxStyle}"
                             Height="60" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <!-- Mod Metadata Section -->
            <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <TextBlock Text="Mod &amp; Build Metadata" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>

                    <Label Content="Namespace:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SelectedQuest.Namespace, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBoxStyle}"/>

                    <Label Content="Mod Name:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SelectedQuest.ModName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBoxStyle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,4,0">
                            <Label Content="Version:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding SelectedQuest.ModVersion, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="4,0,0,0">
                            <Label Content="Author:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding SelectedQuest.ModAuthor, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                    </Grid>

                    <Label Content="Game Developer:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SelectedQuest.GameDeveloper, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBoxStyle}"/>

                    <Label Content="Game Name:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SelectedQuest.GameName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource TextBoxStyle}"/>
                </StackPanel>
            </Border>
            
            <!-- Quest Settings Section -->
            <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <TextBlock Text="Quest Settings" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <CheckBox Content="Auto Begin" 
                              IsChecked="{Binding SelectedQuest.AutoBegin}" 
                              Margin="0,2"/>
                    
                    <CheckBox Content="Custom Icon" 
                              IsChecked="{Binding SelectedQuest.CustomIcon}" 
                              Margin="0,2"/>
                    
                    <CheckBox Content="Quest Rewards" 
                              IsChecked="{Binding SelectedQuest.QuestRewards}" 
                              Margin="0,2"/>
                    
                    <CheckBox Content="Generate Data Class" 
                              IsChecked="{Binding SelectedQuest.GenerateDataClass}" 
                              Margin="0,2"/>
                </StackPanel>
            </Border>
            
            <!-- Quest Objectives Section -->
            <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="Quest Objectives" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
                        <Button Content="+ Add Objective" 
                                Click="AddObjective_Click"
                                Style="{StaticResource IconButtonStyle}"
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right"/>
                    </DockPanel>
                    
                    <ItemsControl ItemsSource="{Binding SelectedQuest.Objectives}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        BorderBrush="#CED4DA" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Margin="0,2" 
                                        Padding="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Objective Name -->
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <Label Content="Name:" Style="{StaticResource LabelStyle}" FontSize="10"/>
                                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource TextBoxStyle}" FontSize="10"/>
                                        </StackPanel>
                                        
                                        <!-- Remove Button -->
                                        <Button Grid.Row="0" Grid.Column="1" 
                                                Content="âŒ" 
                                                Click="RemoveObjective_Click"
                                                Style="{StaticResource IconButtonStyle}"
                                                VerticalAlignment="Top"
                                                Width="24" Height="24"
                                                FontSize="10"/>
                                        
                                        <!-- Objective Title -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                            <Label Content="Title:" Style="{StaticResource LabelStyle}" FontSize="10"/>
                                            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource TextBoxStyle}" FontSize="10"/>
                                        </StackPanel>
                                        
                                        <!-- Required Progress -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                            <Label Content="Required Progress:" Style="{StaticResource LabelStyle}" FontSize="10"/>
                                            <TextBox Text="{Binding RequiredProgress, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource TextBoxStyle}" FontSize="10"/>
                                        </StackPanel>
                                        
                                        <!-- Location Settings -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                                            <CheckBox Content="Has Location" 
                                                      IsChecked="{Binding HasLocation}" 
                                                      FontSize="10" Margin="0,4,0,2"/>
                                            
                                            <Grid Visibility="{Binding HasLocation, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" Margin="0,0,2,0">
                                                    <Label Content="X:" Style="{StaticResource LabelStyle}" FontSize="9"/>
                                                    <TextBox Text="{Binding LocationX, UpdateSourceTrigger=PropertyChanged}" 
                                                             Style="{StaticResource TextBoxStyle}" FontSize="9"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Margin="2,0">
                                                    <Label Content="Y:" Style="{StaticResource LabelStyle}" FontSize="9"/>
                                                    <TextBox Text="{Binding LocationY, UpdateSourceTrigger=PropertyChanged}" 
                                                             Style="{StaticResource TextBoxStyle}" FontSize="9"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2" Margin="2,0,0,0">
                                                    <Label Content="Z:" Style="{StaticResource LabelStyle}" FontSize="9"/>
                                                    <TextBox Text="{Binding LocationZ, UpdateSourceTrigger=PropertyChanged}" 
                                                             Style="{StaticResource TextBoxStyle}" FontSize="9"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Build Actions -->
            <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <TextBlock Text="Build &amp; Export" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <Button Content="Export Mod Project" 
                            Command="{Binding ExportModProjectCommand}" 
                            Style="{StaticResource IconButtonStyle}"
                            Margin="0,2"/>
                    
                    <Button Content="Build Mod" 
                            Command="{Binding BuildModCommand}" 
                            Style="{StaticResource IconButtonStyle}"
                            Margin="0,2"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
